   <StackLayout>
       
    <ListView x:Name="LvCardapio">
        <ListView.ItemTemplate>
            
            <DataTemplate>
                

                    <ViewCell  StyleId="Blue">
                    <StackLayout Orientation="Horizontal">
                            <Image>
                                <Image.Source>
                                    <UriImageSource Uri="{Binding Image}" CacheValidity="14" 
			                                CachingEnabled="true"/>
                                </Image.Source>
                            </Image>
                            <!--<Image Source="{Binding image}" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Start"/>-->
                        <StackLayout>
                            <StackLayout HorizontalOptions="Start">
                                    <Label Text="{Binding nameProduct}" TextColor="BlanchedAlmond"/>
                                    <Label Text="{Binding description}" TextColor="Gray" VerticalOptions="End"/>

                            </StackLayout>

                                <StackLayout>
                                    <Label Text="Testando" TextColor="Black"/>
                                </StackLayout>
                        </StackLayout>
                        <!--<StackLayout HorizontalOptions="Center" Spacing="-15">

                                --><!--<Label Text="{Binding volumeType}"/>
                                <Label Text="{Binding amountVolume}"/>
                                <Label Text="{Binding category}"/>
                                <Label Text="{Binding subCategory}"/>
                                <Label Text="{Binding tag}"/>
                                <Label Text="{Binding stock}"/>-->
                                



                                <!--<ImageButton Source="Setamaiormini.png" Style="{StaticResource Button}" />
                            <ImageButton Source="Setamenormini.png" Style="{StaticResource Button}" />--><!--
                        </StackLayout>-->
                        <StackLayout HorizontalOptions="EndAndExpand" VerticalOptions="Center" Spacing="-5">
                                <Label Text="R$" TextColor="Red" FontAttributes="Bold" />
                                <Label Text="{Binding price}" TextColor="Red" FontAttributes="Bold" />
                        </StackLayout>
                    </StackLayout>
                    
                </ViewCell>

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
   </StackLayout>
    
    


