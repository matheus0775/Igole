                                <!--<ImageButton Source="Setamaiormini.png" Style="{StaticResource Button}" />
                            <ImageButton Source="Setamenormini.png" Style="{StaticResource Button}" />--><!--
                        </StackLayout>-->
                        <StackLayout HorizontalOptions="EndAndExpand" VerticalOptions="Center" Spacing="-5">
                                <Label Text="R$" TextColor="Red" FontAttributes="Bold" />
                                <Label Text="{Binding price}" TextColor="Red" FontAttributes="Bold" />
                        </StackLayout>
                    </StackLayout>
                    
                </ViewCell>

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
   </StackLayout>
    
